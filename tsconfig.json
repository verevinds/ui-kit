    "compilerOptions": {
      "outDir": "dist",
      "module": "esnext",
      "target": "es5",
      "lib": [
        "es6",
        "dom",
        "es2016",
        "es2017"
      ],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "example",
      "rollup.config.js",
      "**/*.stories.tsx",
      "**/*.stories.ts",
      "**/*.stories.js",
      "**/*.stories.jsx",
    ]
}